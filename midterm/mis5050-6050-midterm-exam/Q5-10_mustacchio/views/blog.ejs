<!doctype html>
<!-- Website Template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Blog - Mustacchio</title>
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<link rel="stylesheet" type="text/css" href="css/mobile.css" media="screen and (max-width : 568px)">
	<link rel="shortcut icon" type="image/png" href="images/icons/icon-mustache.png"/>
	<script type="text/javascript" src="js/mobile.js"></script>
</head>
<body>
	
	<div id="body">
		<h1><span>blog</span></h1>
		<div>
			<ul>
				<% styles.forEach(style => { %>
				<li>
					<a href="<%= `/blogposts/${style._id}` %>">
						<img src="images/<%= style.imageUrl %>">
					</a>
					<div>
						<h3><%= style.title%></h3>
						<p>
							<%= style.summary%>
						</p>
						<a href="<%= `/blogposts/${style._id}` %>" class="more">read this</a>
					</div>
				</li>
				
				<% }); %>
			</ul>
		</div>
	</div>
	
</body>
</html>
